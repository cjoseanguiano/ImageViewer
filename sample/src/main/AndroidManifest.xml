<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.stfalcon.sample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.stfalcon.sample.features.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.stfalcon.sample.features.demo.grid.PostersGridDemoActivity"
            android:label="@string/action_images_grid"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.stfalcon.sample.features.demo.scroll.ScrollingImagesDemoActivity"
            android:label="@string/action_scroll"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.stfalcon.sample.features.demo.styled.StylingDemoActivity"
            android:label="@string/action_style"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.stfalcon.sample.features.demo.rotation.RotationDemoActivity"
            android:label="@string/action_rotation"/>

    </application>

</manifest>